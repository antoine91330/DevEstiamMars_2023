pipeline {
    agent any
    parameters {
        string(name: 'NAME', description: 'Votre nom')
 
        text(name: 'DESC', description: 'Description eventuel')
 
        booleanParam(name: 'SKIP_TEST', description: 'Avez-vous le mal des transports ?')
 
        choice(name: 'BRANCH', choices: ['Oui', 'Non'], description: 'Aimez-vous les sensations forte')
 
        password(name: 'SONAR_SERVER_PWD', description: 'Enter SONAR password')
    }
    stages {
        stage('Printing Parameters') {
            steps {
                echo "Hello ${params.NAME}"
 
                echo "Job Details: ${params.DESC}"
 
                echo "Skip Running Test case ?: ${params.SKIP_TEST}"
 
                echo "Branch Choice: ${params.BRANCH}"
 
                echo "SONAR Password: ${params.SONAR_SERVER_PWD}"
            }
        }
 
    stage('BUILD') {
            steps {
                echo 'Developpement'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('DEPLOY') {
            steps {
                echo 'Mise en Production'
            }
        }    
    }
}
